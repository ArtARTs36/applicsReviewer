<div id="container" class="container">
<section class="text-justify pb-5">
    <div class="row mt-5">
        <div class="col-xl-3 col-lg-6">
            <div class="row">
                <div class="col-2">
                    <i class="fas fa-home icon-alt fa-2x mb-1 blue-text" aria-hidden="true"></i>
                </div>
                <div class="col-10 mb-2 pl-4">
                    <h5 class="font-weight-bold mb-3">Наши контакты:</h5>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-lg-6">
            <div class="row">
                <div class="col-2">
                    <i class="fas fa-phone icon-alt mr-3 fa-2x mb-1 blue-text" aria-hidden="true"></i>
                </div>
                <div class="col-10 mb-2  pl-4">
                    <h5 class="font-weight-bold mb-3">{% if siteConfig.footer_phone_2 is defined and siteConfig.footer_phone_2 %}{{ siteConfig.footer_phone_2 }}{% else %} не заполнено{% endif %}</h5>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-lg-6">
            <div class="row">
                <div class="col-2">
                    <i class="fas fa-phone mr-3 icon-alt fa-2x mb-1 blue-text" aria-hidden="true"></i>
                </div>
                <div class="col-10 mb-2  pl-4">
                    <h5 class="font-weight-bold mb-3">{% if siteConfig.footer_phone_2 is defined and siteConfig.footer_phone_2 %}{{ siteConfig.footer_phone_2 }}{% else %} не заполнено{% endif %}</h5>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-lg-6">
            <div class="row">
                <div class="col-2">
                    <i class="fas fa-envelope mr-3 icon-alt fa-2x mb-1 blue-text" aria-hidden="true"></i>
                </div>
                <div class="col-10 mb-2  pl-4">
                    <h5 class="font-weight-bold mb-3">{% if siteConfig.footer_email is defined and siteConfig.footer_email %}{{ siteConfig.footer_email }}{% else %} не заполнено{% endif %}</h5>
                </div>
            </div>
        </div>
    </div>

</section>
</div>